{
  "manifest_version": 2,

  "name": "Lyrics",
  "description": "This extension shows the lyrics for the currently played song in YouTube",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "Show Lyrics"
  },
  "permissions": [
	"http://www.azlyrics.com/",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}